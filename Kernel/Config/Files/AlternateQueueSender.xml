<?xml version="1.0" encoding="utf-8"?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="Frontend::Module###AdminQueueSender" Required="0" Valid="1">
        <Description Translatable="1">Frontend module registration for the queue sender administration.</Description>
        <Group>AlternateQueueSender</Group>
        <SubGroup>Frontend::Admin::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <Description Translatable="1">Create and manage queue sender.</Description>
                <Title Translatable="1">Queue Sender</Title>
                <NavBarName>Admin</NavBarName>
                <NavBarModule>
                    <Module>Kernel::Output::HTML::NavBar::ModuleAdmin</Module>
                    <Name Translatable="1">Queue Sender</Name>
                    <Description Translatable="1">Create and manage queue sender.</Description>
                    <Block>System</Block>
                    <Prio>1123</Prio>
                </NavBarModule>
                <Loader>
                    <JavaScript>PS.Admin.AlternateQueueSender.js</JavaScript>
                </Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Output::FilterElementPost###OutputFilterAlternateQueueSender" Required="0" Valid="1">
        <Description Translatable="1">Module to show the queue sender dropdown.</Description>
        <Group>AlternateQueueSender</Group>
        <SubGroup>OutputFilter</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterElementPost::AlternateQueueSender</Item>
                <Item Key="Debug">0</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AgentTicketCompose">1</Item>
                        <Item Key="AgentTicketBounce">1</Item>
                        <Item Key="AgentTicketForward">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Convert::Chars" Required="0" Valid="1">
        <Description Translatable="1">Mapping what characters should be converted in convert_chars filter.</Description>
        <Group>AlternateQueueSender</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Hash>
                <Item Key="ä">ae</Item>
                <Item Key="ö">oe</Item>
                <Item Key="ü">ue</Item>
                <Item Key="ß">ss</Item>
            </Hash>
        </Setting>
    </ConfigItem>
</otrs_config>
